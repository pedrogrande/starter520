
<div class="jumbotron">
  <div class="container">
    <h1 class="mb-5"><small class="text-muted">Step One. </small> Name your product or business</h1>
    <%= simple_form_for(@canvas) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :name, label: false, placeholder: "Enter the name of your product or business" %>
      </div>

      <div class="form-actions">
        <%= f.submit "Next step", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
